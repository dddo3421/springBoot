$(document).ready(function(){
	$('#imageFileFrm').on('submit',function(){
		event.preventDefault();//submit 이벤트 중지
		
		let formData = new FormData($(('#imageFileForm')[0]);
		
		let fileName = $('#uploadFile').val().split("\\").pop();//파일명만 추출() -> 이미지 출력
		//서버에 요청 처리 후 결과 받아서 처리
		
		$.ajax({
			type: "post",                // 요청 방식 (HTTP 메서드)
			url: "/imageFileUpload",     // 요청을 보낼 서버 측 URL
			enctype: "multipart/form-data", // (form 태그에서 쓰이는 인코딩 방식, 실제로는 크게 필요 없음)
			processData: false,          // 데이터를 query string으로 변환하지 않도록 설정
			contentType: false,          // jQuery가 content-type 헤더를 자동 설정하지 않게 함
			data: formData               // 서버로 전송할 데이터 (FormData 객체)
			success:function(result){
				if(result == "success"){
				  //image에 이미지를 출력
				  $('#imageBox').html('<img src="/images/'+ fileName + '" width="400" height="300">');
				  }
				else
					alert("로그인 실패");

			},
			error:function(data){
				alert("요청 실패");
			},
			complete:function(){
				//alert("작업 완료");
			}
		});
	
	});//submit 종료
});//ready 종료